<h1><%= @cat.name %></h1>
<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
    <tr>
      <td>Owner</td>
      <td><%= @user.username %></td>
    </tr>
</table>
<%if current_user.id == @cat.user_id %>
  <a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>
<% end %>
<h2>Rental Requests</h2>
<% if current_user.id != @cat.user_id %>
  <a href=" <%= new_cat_rental_request_url %> ">Request this cat.</a>
<% end %>
<table>
  <tr>
    <th>User</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').includes(:requester).each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>
