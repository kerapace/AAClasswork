<h1>Cats upon cats!</h1>

<ul>
  <% @cats.each do |cat| %>
    <li><a href="<%= cat_url(cat) %>"><%= cat.name %></a></li>
  <% end %>
</ul>

<a href="<%= new_cat_url %>">Create cat</a>
<% if logged_in? %>
  <form action="/session" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Log Out">
  </form>
<% end %>
