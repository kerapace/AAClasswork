<body>
  <form action="<%= cat_url(@cat) %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for='name'>Name</label><br>
  <input type="text" id='name' name="cat[name]" value="<%=@cat.name %>"><br>
  <label for='birth_date'>Date of Birth</label><br>
  <input type="date" id='birth_date' name="cat[birth_date]" value="<%=@cat.birth_date %>"><br>
  <label for='color'>Color</label><br>
  <select name="cat[color]" id="color">
    <option disabled <%="selected" if @cat.color.nil?%>>--Choose a color--</option>
    <% Cat::COLORS.each do |color| %>
        <option value = <%=color%> <%= "selected" if @cat.color == color%>><%=color.capitalize%> </option>
    <% end %>
  </select><br>
  <label>Sex</label><br>
  <input type="radio" id='M' name="cat[sex]" value="M" <%= "checked" if @cat.sex == "M"%>>
    <label for="M">M</label>
  <input type="radio" id='F' name="cat[sex]" value="F" <%= "checked" if @cat.sex == "F"%>>
    <label for="F">F</label>
    <br>
  <textarea id='description' name="cat[description]"><%=@cat.description%>
  </textarea><br>
  <input type="submit" value = "Change this cat">
  </form>
</body>